{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "moduleResolution": "node",

    "rootDir": "./src",
    "outDir": "./lib/esm",
    "declaration": true,

    "strict": true,
    "alwaysStrict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "sourceMap": true,

    /* Source Map Options */
    // "sourceRoot": "",
    // "mapRoot": "",
    // "inlineSourceMap": true,
    // "inlineSources": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ES2018"]
  },
  "include": ["./src"],
  "exclude": ["**/*.spec.ts", "**/*.mock.ts"]
}
