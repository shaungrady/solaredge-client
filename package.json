{
  "name": "solaredge-client",
  "version": "1.0.1",
  "author": "Shaun Grady",
  "description": "SolarEdge API Client",
  "homepage": "https://github.com/shaungrady/solaredge-client",
  "repository": "github:shaungrady/solaredge-client",
  "license": "ISC",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "files": [
    "./lib/"
  ],
  "scripts": {
    "watch": "tsc --build --watch",
    "build": "tsc --build tsconfig.json tsconfig.cjs.json tsconfig.umd.json",
    "lint": "eslint ./src --ext .ts",
    "test": "jest",
    "release": "echo \"Releases are handled via GitHub\" && exit 1",
    "ci:build": "npm run build",
    "ci:lint": "npm run lint",
    "ci:test": "npm run test -- --ci --coverage",
    "ci:release-draft": "node scripts/push-draft-release.js",
    "preversion": "run-p lint test build:* && git add -f -A ./lib"
  },
  "dependencies": {
    "assert-never": "^1.2.1",
    "cross-fetch": "^3.0.6",
    "date-fns": "^2.16.1",
    "query-string": "^6.13.6"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.0",
    "jest": "^26.6.2",
    "jest-extended": "^0.11.5",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.3",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5"
  },
  "volta": {
    "node": "14.15.0",
    "npm": "6.14.8"
  }
}
