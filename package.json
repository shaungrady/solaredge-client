{
  "name": "solaredge-client",
  "version": "1.0.1",
  "author": "Shaun Grady",
  "description": "SolarEdge API Client",
  "homepage": "https://github.com/shaungrady/solaredge-client",
  "repository": "github:shaungrady/solaredge-client",
  "license": "ISC",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "files": [
    "./lib/"
  ],
  "scripts": {
    "prebuild": "rimraf ./lib",
    "build": "run-p build:*",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:umd": "rollup -c rollup.config.js",
    "lint": "eslint ./src --ext .ts",
    "test": "jest",
    "ci:lint": "npm run lint",
    "ci:test": "npm run test -- --ci --coverage",
    "ci:build": "npm run build",
    "preversion": "run-p lint test build:* && git add -f -A ./lib"
  },
  "dependencies": {
    "assert-never": "^1.2.1",
    "cross-fetch": "^3.0.5",
    "date-fns": "^2.16.1",
    "query-string": "^6.13.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^5.0.2",
    "@types/jest": "^26.0.9",
    "@types/node": "^14.0.27",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.6.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "jest-extended": "^0.11.5",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.23.1",
    "rollup-plugin-terser": "^7.0.0",
    "ts-jest": "^26.3.0",
    "ts-node": "^8.10.2",
    "tslib": "^2.0.1",
    "typescript": "^4.0.3"
  }
}
